<div class="author-content">
  <% const motto = site.data.about.motto; %>
  <div class="author-content-item maxim">
    <div class="author-content-item-tips"><%= motto.title %></div>
    <span class="maxim-title"><span style="opacity: 0.6;margin-bottom:8px;"><%= motto.prefix %></span><span><%= motto.content %></span></span>
  </div>
  <div class="author-content-item buff">
    <% const expertise = site.data.about.expertise; %>
    <div class="card-content">
      <div class="author-content-item-tips"><%= expertise.title %></div>
      <span class="buff-title"><span style="opacity: 0.6;margin-bottom:8px;"><%= expertise.prefix %><span class="inline-word"><%= expertise.specialist %></span></span><span><%= expertise.content %><span class="inline-word"><%= expertise.level %></span></span></span>
    </div>
  </div>
</div>