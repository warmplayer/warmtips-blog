<div class="card-widget heo-right-widget" id="card-wechat" style="background: <%= theme.aside.flip.color %> ;">
    <div id="flip-wrapper">
        <div id="flip-content">
            <div class="face">
                <div class="left">
                    <span class="title"><%= theme.aside.flip.face.title %></span>
                    <span class="desc"><%= theme.aside.flip.face.desc %> <i class="fa-solid fa-play"></i></span>
                </div>
            </div>
            <div class="back face">
                <div class="left">
                    <span class="title"><%= theme.aside.flip.backface.title %></span>
                    <span class="desc"><%= theme.aside.flip.backface.desc %> <i class="fa-solid fa-play"></i></span>
                </div>
                <img class="nolazyload" src="<%= theme.aside.flip.backface.img %>">
            </div>
        </div>
    </div>
</div>